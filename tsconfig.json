{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "outDir": "lib/esm",
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2018"
  },
  "exclude": ["src/**/*.stories.tsx"],
  "include": ["src/**/*"]
}
